<% flat = data.flats[owner] %>
<div class="small-banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 20%), url('http://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>')"></div>
<div class= container-flat>
  <div class= flat-user>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", width: "80px", class: "avatar-flat-user img-circle" %>
  </div>
  <div class="flat-description">
    <h1><%= flat.description %></h1>
    <p><%= flat.city_name %></p>
  </div>
  <div class="flat-booking">
   <form action="#">
    <h4>Book this flat</h4>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" class="form-control" placeholder="checkin" id="checkin">
          </div>
          <div class="col-xs-6">
            <input type="text" class="form-control" placeholder="checkout">
          </div>
        </div>
      </div>
      <div class="form-group">
        <select name="" id="guests" class="form-control">
          <option value="1">1 guest</option>
          <option value="2">2 guests</option>
          <option value="3">3 guests</option>
        </select>
      </div>
        <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
      </form>
  </div>
</div>
<div class="container-flat-infos" >
  <div class= "flat-infos-title">
    <h3> About this flat <h3>
    <p>This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur.
    </p>
  </div>
  <div class= "flat-infos-space">
  </div>
  <div class= "flat-infos-amenities">
  </div>
</div>

